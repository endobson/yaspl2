#:module (core-language lexer-test)
#:import {
  (bytes)
  (data source-location)
  (list)
  (maybe)
  (prim)
  (core-language lexer)
  (tuples)
  (yunit)
}
(export
  (#:values main))
(types)

(define (lex-all [bytes : Bytes]) : (Maybe (List (SourceSpanAnnotated Token)))
  (lex-all/run (make-core-lexer (sourced-bytes (unnamed-source) bytes)) (empty)))
(define (lex-all/run [lexer : (Lexer Token)] [tokens : (List (SourceSpanAnnotated Token))])
  : (Maybe (List (SourceSpanAnnotated Token)))
  (case (run-lexer lexer)
    [(lex-result v lexer) (lex-all/run lexer (cons v tokens))]
    [(end-of-input _) (just (reverse tokens))]
    [(bad-input _ _) (nothing)]))

(define (count-lexemes [bytes : Bytes] [expected-count : Int]) : (-> Boolean)
  (lambda ()
    (case (lex-all bytes)
      [(nothing) #f]
      [(just lexemes) (= (length lexemes) expected-count)])))

(define (main [args : Bytes] [stdin : InputPort] [stdout : OutputPort] [stderr : OutputPort]) : Int
  (yunit/main stderr
    (varargs list
      (test-case #"parens" (count-lexemes #"()[]<>{}" 8))
      )))
