#:module (core-language sized-types)
#:import {
  (data lifted-primitives)
  (maybe)
  (prim)
  (types)
}
(export
  (#:types SizedType)
  (#:values raw-sized-type sized-type->type sized-type->bytes-size)
  (#:patterns ))
(types
  (define-type SizedType
    ; (struct-sized-type [t : Type])
    ; (fixed-array-sized-type [t : SizedType])
    (raw-sized-type [t : Type])))


(define (sized-type->bytes-size [t : SizedType]) : (Maybe LiftedInt)
  (case t
    [(raw-sized-type t)
     (kind->bytes-size (type->kind t))]))

(define (sized-type->type [t : SizedType]) : Type
  (case t
    [(raw-sized-type t) t]))

(define (kind->bytes-size [k : Kind]) : (Maybe LiftedInt)
  (case k
    [(star-kind) (just (lifted-int 8))]
    [(prim-kind s) (just (lifted-int (type-size->num-bytes s)))]
    [(memory-kind) (nothing)]
    [(fun-kind _ _) (nothing)]))

(define (type-size->num-bytes [t : TypeSize]) : Int
  (case t
    [(type-size8) 1]
    [(type-size16) 2]
    [(type-size32) 4]
    [(type-size64) 8]))
