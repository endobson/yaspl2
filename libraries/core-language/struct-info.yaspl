#:module (core-language struct-info)
#:import {
  (dict)
  (prim)
  (types)
}
(export
  (#:types StructDestructionInfo StructField)
  (#:values struct-destruction-info struct-field)
  (#:patterns struct-destruction-info struct-field))

(types
  (define-type StructDestructionInfo
    (struct-destruction-info
      [fields : (Dict Bytes StructField)]))

  (define-type StructField
    (struct-field
      [offset : Int]
      [type : Type])))
