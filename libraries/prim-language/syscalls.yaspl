#:module (syscalls)
#:import {
  (machine-code)
  (prim)
}
(export
  (#:types Syscall)
  (#:values exit-syscall write-syscall syscall-number)
  (#:patterns exit-syscall write-syscall))
(types
  (define-type Syscall
    (exit-syscall)
    (write-syscall)))

(define (syscall-number [s : Syscall] [abi : SystemAbi]) : Int
  (case abi
    [(osx-abi)
     (case s
       [(exit-syscall) #x2000001]
       [(write-syscall) #x2000004])]
    [(linux-abi)
     (case s
       [(exit-syscall) #x3C]
       [(write-syscall) #x01])]))
