(module simple-pointers
  (define (main x)
    (def array (allocate-array int8 2))
    (ptr-set! (array-ref int8 array 0) (cast int64->int8 1))
    (ptr-set! (array-ref int8 array 1) (cast int64->int8 2))
    (return
      (+ (cast int8->int64 (ptr-ref (array-ref int8 array 0)))
               (cast int8->int64 (ptr-ref (array-ref int8 array 1)))))))
