(module simple-pointers
  (types)
  (define (main [x : int64]) : int64
    (def array (allocate-array int8 2))
    (ptr-set! (ptr-adjust int8 array 0) (cast int64->int8 1))
    (ptr-set! (ptr-adjust int8 array 1) (cast int64->int8 2))
    (return
      (+ (cast int8->int64 (ptr-ref (ptr-adjust int8 array 0)))
               (cast int8->int64 (ptr-ref (ptr-adjust int8 array 1)))))))
