#:module (sexp-parser-test)
#:import {
  (data source-location)
  (either)
  (list)
  (maybe)
  (prim)
  (sexp-parser)
  (yunit)
}
(export
  (#:values main))
(types)


(define (good-sexp [bytes : Bytes]) : (-> (Maybe FailedAssertion))
  (lambda ()
    (case (parse-single-sexp (sourced-bytes (unnamed-source) bytes))
      [(left _) (just (failure #"Unparseable sexp"))]
      [(right _) (nothing)])))

(define (bad-sexp [bytes : Bytes] [expected-error-message : Bytes]) : (-> (Maybe FailedAssertion))
  (lambda ()
    (case (parse-single-sexp (sourced-bytes (unnamed-source) bytes))
      [(right _) (just (failure #"Unparseable sexp"))]
      [(left (sexp-error message _))
       (expect-equal/bytes message expected-error-message)])))

(define (main [args : Bytes] [stdin : InputPort] [stdout : OutputPort] [stderr : OutputPort]) : Int
  (yunit/main stderr
    (varargs list
      (new-test-case #"1" (good-sexp #"(()())"))
      (new-test-case #"2" (good-sexp #"( ( ()(( )  )\n )( ))"))
      (new-test-case #"3" (good-sexp #"+"))
      (new-test-case #"4" (good-sexp #"(+ (+))"))
      (new-test-case #"5" (good-sexp #"2"))
      (new-test-case #"6" (good-sexp #"23"))
      (new-test-case #"7" (good-sexp #"456"))
      (new-test-case #"8" (good-sexp #"(+ 2 3)"))
      (new-test-case #"9" (good-sexp #"#:foo"))
      (new-test-case #"10" (good-sexp #"#\"foo\""))
      (new-test-case #"11" (good-sexp #";.&\na"))
      (new-test-case #"12" (good-sexp #"(a;.&\na)"))
      (new-test-case #"13" (good-sexp #"#t"))
      (new-test-case #"14" (good-sexp #"(#t)"))
      (new-test-case #"15" (good-sexp #"()"))
      (new-test-case #"16" (good-sexp #"[]"))
      (new-test-case #"17" (good-sexp #"[[]()]"))

      (new-test-case #"b1" (bad-sexp #"" #"End of input"))
      (new-test-case #"b2" (bad-sexp #"(" #"Unmatched open paren"))
      (new-test-case #"b3" (bad-sexp #")" #"Unexpected )."))
      (new-test-case #"b4" (bad-sexp #"(()" #"Unmatched open paren"))
      (new-test-case #"b5" (bad-sexp #"[)" #"Unexpected )."))
      (new-test-case #"b6" (bad-sexp #"(]" #"Unexpected ].")))))
