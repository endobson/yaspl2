#:module (yaspl runtime variant-descriptor-test)
#:import {
  (bytes)
  (data lifted-primitives)
  (list)
  (maybe)
  (numbers)
  (prim)
  (yunit)
}
(export
  (#:values main))
(types)

(define [A] (check-variant-name [a : A] [expected-name : Bytes])
  : (-> (Maybe FailedAssertion))
  (lambda ()
    (match-define actual-name (get-variant-name a))
    (if (bytes=? actual-name expected-name)
        (nothing)
        (just (failure
                (bytes-append (varargs list #"Expected: " expected-name #" Got: " actual-name)))))))

(define [A] (check-variant-field-count [a : A] [expected-count : Int])
  : (-> (Maybe FailedAssertion))
  (lambda ()
    (match-define actual-count (get-variant-field-count a))
    (if (= actual-count expected-count)
        (nothing)
        (just (failure
                (bytes-append (varargs list #"Expected: " (integer->decimal-bytes expected-count)
                                            #" Got: " (integer->decimal-bytes actual-count))))))))


(define (main [args : Bytes] [stdin : InputPort] [stdout : OutputPort] [stderr : OutputPort]) : Int
  (yunit/main stderr
    (varargs list
      (new-test-case #"get-variant-name: (lifted-void)"
        (check-variant-name (lifted-void) #"lifted-void"))
      (new-test-case #"get-variant-name: (lifted-true)"
        (check-variant-name (lifted-true) #"lifted-true"))
      (new-test-case #"get-variant-name: (lifted-false)"
        (check-variant-name (lifted-false) #"lifted-false"))
      (new-test-case #"get-variant-name: (empty)"
        (check-variant-name (ann (List Bytes) (empty)) #"empty"))
      (new-test-case #"get-variant-name: (cons)"
        (check-variant-name (ann (List Bytes) (cons #"foo" (empty))) #"cons"))
      (new-test-case #"get-variant-name: bytes-literal"
        (check-variant-name #"" #"bytes"))
      (new-test-case #"get-variant-name: initial args"
        (check-variant-name args #"bytes"))
      (new-test-case #"get-variant-name: (make-bytes)"
        (check-variant-name (make-bytes 1) #"bytes"))

      (new-test-case #"get-variant-field-count: (cons)"
        (check-variant-field-count (ann (List Bytes) (cons #"foo" (empty))) 2))
      (new-test-case #"get-variant-field-count: (emtpty)"
        (check-variant-field-count (ann (List Bytes) (empty)) 0)))))
