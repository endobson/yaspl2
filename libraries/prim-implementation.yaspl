#:module (prim-implementation)
#:import {
  (bytes)
  (dict)
  (intermediate-expression)
  (intermediate-language)
  (list)
  (maybe)
  (module-signature)
  (prim)
  (prim-names)
  (prim-types)
  (top-level-name)
  (tuples)
  (types)
  {(yaspl intermediate-to-register)
    {#:values
      [module-to-top-level-objects r:module-to-top-level-objects]
